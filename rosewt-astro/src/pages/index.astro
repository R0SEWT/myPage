---
import BaseLayout from '../layouts/BaseLayout.astro';
import ThemeToggle from '../components/ThemeToggle.jsx';
import MobileMenu from '../components/MobileMenu.jsx';
import ProjectCard from '../components/ProjectCard.astro';
import ScrollReveal from '../components/ScrollReveal.astro';
import Badge from '../components/Badge.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects', p => p.data.published !== false);
// Ordenar por fecha (más recientes primero)
projects.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---
<BaseLayout title="Rody Vilchez — Data & AI" description="Portafolio de proyectos en Data/ML, RAG y QA.">
  <header class="sticky top-0 z-40 backdrop-blur border-b border-slate-200/70 dark:border-slate-800 supports-[backdrop-filter]:bg-white/70 dark:supports-[backdrop-filter]:bg-slate-900/60">
    <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between relative">
      <a href="#home" class="font-semibold tracking-tight text-lg">Rody <span class="text-teal">Vilchez</span></a>
      <nav class="hidden md:flex gap-6 text-sm">
        <a href="#projects" class="hover:text-teal transition-colors">Proyectos</a>
        <a href="#experience" class="hover:text-teal transition-colors">Experiencia</a>
        <a href="#publications" class="hover:text-teal transition-colors">Publicaciones</a>
        <a href="#contact" class="hover:text-teal transition-colors">Contacto</a>
      </nav>
      <div class="flex items-center gap-2">
        <ThemeToggle client:idle />
        <a href="/CV.pdf" class="inline-flex items-center rounded-xl bg-teal px-3 py-1.5 text-sm font-semibold text-white hover:opacity-90">Descargar CV</a>
        <MobileMenu client:idle />
      </div>
    </div>
  </header>

  <main>
    <!-- Hero -->
    <section id="home" class="relative overflow-hidden">
      <div class="max-w-6xl mx-auto px-4 py-16 md:py-24 grid md:grid-cols-2 gap-10 items-center">
        <ScrollReveal>
          <div>
            <h1 class="text-3xl md:text-5xl font-bold leading-tight tracking-tight">
              Construyo soluciones <span class="text-teal animate-pulse-glow">Data & IA</span> con enfoque aplicado
            </h1>
            <p class="mt-4 text-base md:text-lg text-slate-600 dark:text-slate-300">
              Estudiante de CS (8vo ciclo) y QA Trainee. Me enfoco en ML práctico, RAG, visión por computadora y herramientas para análisis de datos. Busco roles de Data/ML donde crear impacto real.
            </p>
            <div class="mt-6 flex flex-wrap gap-3">
              <a href="#projects" class="group rounded-xl bg-slate-900 text-white dark:bg-white dark:text-slate-900 px-4 py-2 text-sm font-semibold hover:scale-105 transition-transform">
                Ver proyectos
              </a>
              <a href="https://github.com/R0SEWT" target="_blank" rel="noopener" class="group rounded-xl border border-slate-200 dark:border-slate-800 px-4 py-2 text-sm font-semibold hover:bg-slate-50 dark:hover:bg-slate-800 hover:scale-105 transition-all">
                GitHub
              </a>
            </div>
            <div class="mt-6 flex flex-wrap gap-2 text-xs text-slate-500">
              <Badge text="Python" animated />
              <Badge text="H2O.ai" animated />
              <Badge text="XGBoost" animated />
              <Badge text="Optuna" animated />
              <Badge text="RAG" variant="primary" animated />
              <Badge text="Deep Learning" variant="secondary" animated />
            </div>
          </div>
        </ScrollReveal>
        <ScrollReveal delay={200}>
          <div class="relative">
            <div class="aspect-[4/3] rounded-2xl bg-gradient-to-br from-teal to-lilac/70 p-[2px] shadow-xl animate-float">
              <div class="h-full w-full rounded-2xl bg-white dark:bg-slate-900 p-6 flex items-center glass">
                <div class="grid grid-cols-2 gap-4 w-full">
                  <div class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:border-teal/30 transition-colors">
                    <p class="text-xs text-slate-500">Proyecto</p>
                    <p class="font-semibold">Imitator (SLT)</p>
                    <p class="text-xs text-slate-500">ST-GCN + Transformer · Offline</p>
                  </div>
                  <div class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:border-teal/30 transition-colors">
                    <p class="text-xs text-slate-500">EDA</p>
                    <p class="font-semibold">Danish Housing Prices</p>
                    <p class="text-xs text-slate-500">H2O + SHAP/LIME · 1.5M rows</p>
                  </div>
                  <div class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:border-teal/30 transition-colors">
                    <p class="text-xs text-slate-500">RAG</p>
                    <p class="font-semibold">ArbitrIA</p>
                    <p class="text-xs text-slate-500">Legal-tech · LlamaIndex</p>
                  </div>
                  <div class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:border-teal/30 transition-colors">
                    <p class="text-xs text-slate-500">QA</p>
                    <p class="font-semibold">Cypress + Jenkins</p>
                    <p class="text-xs text-slate-500">Mapping & auto-tests</p>
                  </div>
                </div>
              </div>
            </div>
            <p class="mt-2 text-xs text-slate-500"> </p>
          </div>
        </ScrollReveal>
      </div>
    </section>

    <!-- Projects -->
    <section id="projects" class="py-16 md:py-24 bg-slate-50 dark:bg-slate-900/30">
      <div class="max-w-6xl mx-auto px-4">
        <ScrollReveal>
          <div class="flex items-end justify-between gap-4">
            <h2 class="text-2xl md:text-3xl font-bold">Proyectos seleccionados</h2>
            <a href="https://github.com/R0SEWT?tab=repositories" target="_blank" rel="noopener" class="text-sm hover:text-teal transition-colors group">
              Ver todo 
              <span class="inline-block transition-transform group-hover:translate-x-1">→</span>
            </a>
          </div>
        </ScrollReveal>
        <div class="mt-8 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {projects.map(({ id, data }, index) => (
            <ScrollReveal delay={index * 100}>
              <ProjectCard
                href={data.url}
                title={data.title}
                desc={data.description}
                tags={data.tags}
                key={id}
              />
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Experience -->
    <section id="experience" class="py-16 md:py-24">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-2xl md:text-3xl font-bold">Experiencia</h2>
        <div class="mt-8 grid md:grid-cols-2 gap-6">
          <article class="rounded-2xl border border-slate-200 dark:border-slate-800 p-6">
            <header class="flex items-center justify-between">
              <h3 class="font-semibold">QA Trainee — Visma LATAM (Mandü)</h3>
              <span class="text-xs text-slate-500">2024–2025</span>
            </header>
            <ul class="mt-3 text-sm list-disc pl-5 space-y-2 text-slate-600 dark:text-slate-300">
              <li>Automatización de pruebas con Cypress; generación de suites a partir del DOM.</li>
              <li>Gestión de datos/selectores vía fixtures JSON; reporte de bugs en Jira.</li>
              <li>Integración con Jenkins; métricas y coverage en flujos críticos.</li>
            </ul>
          </article>
          <article class="rounded-2xl border border-slate-200 dark:border-slate-800 p-6">
            <header class="flex items-center justify-between">
              <h3 class="font-semibold">Proyectos Académicos — UPC</h3>
              <span class="text-xs text-slate-500">2023–2025</span>
            </header>
            <ul class="mt-3 text-sm list-disc pl-5 space-y-2 text-slate-600 dark:text-slate-300">
              <li>Reconocimiento de emociones con NAO: CNNs + keypoints faciales/posturales.</li>
              <li>RAG legal (ArbitrIA): ingestion service + LlamaIndex + chat contextual.</li>
              <li>Big Data (H2O): modelo de precios de vivienda en Dinamarca con SHAP/LIME.</li>
            </ul>
          </article>
        </div>
      </div>
    </section>

    <!-- Publications -->
    <section id="publications" class="py-16 md:py-24 bg-slate-50 dark:bg-slate-900/30">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-2xl md:text-3xl font-bold">Publicaciones & Docs</h2>
        <ul class="mt-6 grid md:grid-cols-2 gap-4 text-sm">
          <li class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:bg-white/60 dark:hover:bg-slate-900/60 transition">
            <a href="#" class="font-semibold hover:text-teal">Imitator: Gloss‑Free SLT via Embedding Alignment</a>
            <p class="text-slate-500">Borrador IEEE — 2025</p>
          </li>
          <li class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:bg-white/60 dark:hover:bg-slate-900/60 transition">
            <a href="#" class="font-semibold hover:text-teal">Danish Housing Prices — EDA + ML</a>
            <p class="text-slate-500">Reporte técnico — 2025</p>
          </li>
        </ul>
      </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="py-16 md:py-24">
      <div class="max-w-6xl mx-auto px-4">
        <ScrollReveal>
          <div class="text-center mb-12">
            <h2 class="text-2xl md:text-3xl font-bold">¡Hablemos!</h2>
            <p class="mt-3 text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
              ¿Interesado en colaborar? ¿Tienes una oportunidad en Data/ML? Me encantaría conocer tu proyecto.
            </p>
          </div>
        </ScrollReveal>
        
        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Contact Info Cards -->
          <ScrollReveal delay={100}>
            <div class="lg:col-span-1 space-y-4">
              <!-- Email Card -->
              <a 
                href="mailto:rody.vilchez00@gmail.com" 
                class="group block rounded-2xl border border-slate-200 dark:border-slate-800 p-6 hover:border-teal/30 hover:bg-teal/5 transition-all hover:scale-105"
              >
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 rounded-full bg-teal/10 flex items-center justify-center group-hover:bg-teal group-hover:text-white transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-slate-900 dark:text-slate-100">Email</h3>
                    <p class="text-sm text-slate-600 dark:text-slate-300">rody.vilchez00@gmail.com</p>
                  </div>
                </div>
              </a>

              <!-- LinkedIn Card -->
              <a 
                href="https://www.linkedin.com/in/r0sewt/" 
                target="_blank" 
                rel="noopener"
                class="group block rounded-2xl border border-slate-200 dark:border-slate-800 p-6 hover:border-teal/30 hover:bg-teal/5 transition-all hover:scale-105"
              >
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 rounded-full bg-teal/10 flex items-center justify-center group-hover:bg-teal group-hover:text-white transition-colors">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-slate-900 dark:text-slate-100">LinkedIn</h3>
                    <p class="text-sm text-slate-600 dark:text-slate-300">@r0sewt</p>
                  </div>
                </div>
              </a>

              <!-- GitHub Card -->
              <a 
                href="https://github.com/R0SEWT" 
                target="_blank" 
                rel="noopener"
                class="group block rounded-2xl border border-slate-200 dark:border-slate-800 p-6 hover:border-teal/30 hover:bg-teal/5 transition-all hover:scale-105"
              >
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 rounded-full bg-teal/10 flex items-center justify-center group-hover:bg-teal group-hover:text-white transition-colors">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-slate-900 dark:text-slate-100">GitHub</h3>
                    <p class="text-sm text-slate-600 dark:text-slate-300">@R0SEWT</p>
                  </div>
                </div>
              </a>
            </div>
          </ScrollReveal>

          <!-- Contact Form -->
          <ScrollReveal delay={200}>
            <div class="lg:col-span-2">
              <div class="rounded-2xl border border-slate-200 dark:border-slate-800 p-6 bg-white/50 dark:bg-slate-900/50 backdrop-blur">
                <h3 class="text-lg font-semibold mb-4">Envíame un mensaje</h3>
                <form class="space-y-4" data-netlify="true" method="POST" name="contact">
                  <div class="grid md:grid-cols-2 gap-4">
                    <div>
                      <label for="name" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Nombre</label>
                      <input 
                        type="text" 
                        id="name" 
                        name="name"
                        class="w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 px-3 py-2 text-sm focus:border-teal focus:ring-1 focus:ring-teal/20 focus:outline-none transition-colors" 
                        placeholder="Tu nombre"
                        required
                      />
                    </div>
                    <div>
                      <label for="email" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Email</label>
                      <input 
                        type="email" 
                        id="email" 
                        name="email"
                        class="w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 px-3 py-2 text-sm focus:border-teal focus:ring-1 focus:ring-teal/20 focus:outline-none transition-colors" 
                        placeholder="tu@email.com"
                        required
                      />
                    </div>
                  </div>
                  <div>
                    <label for="subject" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Asunto</label>
                    <input 
                      type="text" 
                      id="subject" 
                      name="subject"
                      class="w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 px-3 py-2 text-sm focus:border-teal focus:ring-1 focus:ring-teal/20 focus:outline-none transition-colors" 
                      placeholder="¿De qué quieres hablar?"
                      required
                    />
                  </div>
                  <div>
                    <label for="message" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Mensaje</label>
                    <textarea 
                      id="message" 
                      name="message"
                      rows="3"
                      class="w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 px-3 py-2 text-sm focus:border-teal focus:ring-1 focus:ring-teal/20 focus:outline-none transition-colors resize-none" 
                      placeholder="Cuéntame sobre tu proyecto, idea o simplemente salúdame 👋"
                      required
                    ></textarea>
                  </div>
                  <div class="flex items-center justify-between">
                    <p class="text-xs text-slate-500">
                      📧 Respondo usualmente en 24-48 horas
                    </p>
                    <button 
                      type="submit" 
                      class="inline-flex items-center gap-2 rounded-lg bg-teal px-5 py-2 text-sm font-semibold text-white hover:opacity-90 hover:scale-105 transition-all focus:outline-none focus:ring-2 focus:ring-teal/50"
                    >
                      <span>Enviar</span>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                      </svg>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </ScrollReveal>
        </div>
        
        <!-- Quick Contact Stats -->
        <ScrollReveal delay={300}>
          <div class="mt-12 text-center">
            <p class="text-sm text-slate-600 dark:text-slate-300 mb-4">¿Prefieres el contacto directo?</p>
            <div class="flex flex-wrap justify-center gap-4">
              <Badge text="📧 Respuesta < 48h" variant="primary" />
              <Badge text="💼 Abierto a colaboraciones" variant="secondary" />
              <Badge text="🚀 Disponible para proyectos" animated />
            </div>
          </div>
        </ScrollReveal>
      </div>
    </section>
  </main>

  <footer class="py-8 border-t border-slate-200 dark:border-slate-800 text-center text-sm text-slate-500">
    © {new Date().getFullYear()} Rody Vilchez — Lima, Perú
  </footer>
</BaseLayout>