---
import BaseLayout from '../layouts/BaseLayout.astro';
import SkipLinks from '../components/ui/SkipLinks.astro';
import Header from '../components/layout/Header.astro';
import HeroSection from '../components/sections/HeroSection.astro';
import ProjectsSection from '../components/sections/ProjectsSection.astro';
import ExperienceSection from '../components/sections/ExperienceSection.astro';
import PublicationsSection from '../components/sections/PublicationsSection.astro';
import ContactSection from '../components/sections/ContactSection.astro';
import Footer from '../components/layout/Footer.astro';
---

<BaseLayout 
  title="Rody Vilchez — Data Scientist & ML Engineer | Portfolio" 
  description="Estudiante de Computer Science especializado en Machine Learning, RAG, Computer Vision y QA. Proyectos con PyTorch, H2O.ai, LlamaIndex y más."
  keywords="Rody Vilchez, Data Science, Machine Learning, RAG, Computer Vision, QA Automation, Python, PyTorch, H2O, LlamaIndex, Portfolio, Lima Peru"
  type="website"
>
  <SkipLinks />
  <Header />
  
  <main id="main-content" role="main">
    <HeroSection />
    <div class="section" style="--section-index: 1;">
      <ProjectsSection />
    </div>
    <div class="section" style="--section-index: 2;">
      <ExperienceSection />
    </div>
    <div class="section" style="--section-index: 3;">
      <PublicationsSection />
    </div>
    <div class="section" style="--section-index: 4;">
      <ContactSection />
    </div>
  </main>

  <Footer />
</BaseLayout>
