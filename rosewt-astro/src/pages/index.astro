---
import BaseLayout from '../layouts/BaseLayout.astro';
import ThemeToggle from '../components/ThemeToggle.jsx';
import MobileMenu from '../components/MobileMenu.jsx';
import ProjectCard from '../components/ProjectCard.astro';
import ScrollReveal from '../components/ScrollReveal.astro';
import Badge from '../components/Badge.astro';
import ContactCards from '../components/ContactCards.astro';
import ContactForm from '../components/ContactForm.astro';
import WhatImLookingFor from '../components/WhatImLookingFor.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects', p => p.data.published !== false);
// Ordenar por fecha (más recientes primero)
projects.sort((a, b) => new Date(b.data.date || '2024-01-01').getTime() - new Date(a.data.date || '2024-01-01').getTime());
---
<BaseLayout 
  title="Rody Vilchez — Data Scientist & ML Engineer | Portfolio" 
  description="Estudiante de Computer Science especializado en Machine Learning, RAG, Computer Vision y QA. Proyectos con PyTorch, H2O.ai, LlamaIndex y más."
  keywords="Rody Vilchez, Data Science, Machine Learning, RAG, Computer Vision, QA Automation, Python, PyTorch, H2O, LlamaIndex, Portfolio, Lima Peru"
  type="website"
>
  <!-- Skip Navigation Links -->
  <a href="#main-content" class="skip-link">Ir al contenido principal</a>
  <a href="#navigation" class="skip-link">Ir a navegación</a>
  <a href="#projects" class="skip-link">Ir a proyectos</a>
  <a href="#contact" class="skip-link">Ir a contacto</a>

  <header class="sticky top-0 z-40 backdrop-blur border-b border-slate-200/70 dark:border-slate-800 supports-[backdrop-filter]:bg-white/70 dark:supports-[backdrop-filter]:bg-slate-900/60" role="banner">
    <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between relative">
      <a href="#home" class="font-semibold tracking-tight text-lg" aria-label="Rody Vilchez - Ir al inicio">Rody <span class="text-teal">Vilchez</span></a>
      <nav id="navigation" class="hidden md:flex gap-6 text-sm" role="navigation" aria-label="Navegación principal">
        <a href="#projects" class="effect-base hover:text-teal focus-ring">Proyectos</a>
        <a href="#experience" class="effect-base hover:text-teal focus-ring">Experiencia</a>
        <a href="#publications" class="effect-base hover:text-teal focus-ring">Publicaciones</a>
        <a href="#contact" class="effect-base hover:text-teal focus-ring">Contacto</a>
      </nav>
      <div class="flex items-center gap-2">
        <ThemeToggle client:idle />
        <a href="/CV.pdf" class="effect-button inline-flex items-center rounded-xl bg-teal px-3 py-1.5 text-sm font-semibold text-white focus-ring" aria-label="Descargar CV en formato PDF">Descargar CV</a>
        <MobileMenu client:idle />
      </div>
    </div>
  </header>

  <main id="main-content" role="main">
    <!-- Hero Section -->
    <section id="home" class="relative overflow-hidden" role="banner" aria-labelledby="hero-heading">
      <div class="max-w-6xl mx-auto px-4 py-16 md:py-24 grid md:grid-cols-2 gap-10 items-center">
        <ScrollReveal>
          <div>
            <h1 id="hero-heading" class="text-3xl md:text-5xl font-bold leading-tight tracking-tight">
              Construyo soluciones <span class="text-teal animate-pulse-soft" aria-label="Data e Inteligencia Artificial">Data & IA</span> con enfoque aplicado
            </h1>
            <p class="mt-4 text-base md:text-lg text-slate-600 dark:text-slate-300">
              Estudiante de CS (8vo ciclo) y QA Trainee. Me enfoco en ML práctico, RAG, visión por computadora y herramientas para análisis de datos. Busco roles de Data/ML donde crear impacto real.
            </p>
            <div class="mt-6 flex flex-wrap gap-3" role="group" aria-label="Enlaces principales">
              <a href="#projects" class="effect-button rounded-xl bg-slate-900 text-white dark:bg-white dark:text-slate-900 px-4 py-2 text-sm font-semibold focus-ring" aria-label="Ver proyectos destacados">
                Ver proyectos
              </a>
              <a href="https://github.com/R0SEWT" target="_blank" rel="noopener" class="effect-button rounded-xl border border-slate-200 dark:border-slate-800 px-4 py-2 text-sm font-semibold focus-ring" aria-label="Ver perfil de GitHub (abre en nueva ventana)">
                GitHub
              </a>
            </div>
            <div class="mt-6 flex flex-wrap gap-2 text-xs text-slate-500" role="list" aria-label="Tecnologías principales">
              <Badge text="Python" animated />
              <Badge text="H2O.ai" animated />
              <Badge text="XGBoost" animated />
              <Badge text="Optuna" animated />
              <Badge text="RAG" variant="primary" animated />
              <Badge text="CV" variant="secondary" animated />
            </div>
          </div>
        </ScrollReveal>
        <ScrollReveal delay={200}>
          <div class="relative" role="img" aria-label="Vista previa de proyectos destacados">
            <div class="aspect-[4/3] rounded-2xl bg-gradient-to-br from-teal to-lilac/70 p-[2px] shadow-xl animate-float">
              <div class="h-full w-full rounded-2xl bg-white dark:bg-slate-900 p-6 flex items-center glass">
                <div class="grid grid-cols-2 gap-4 w-full">
                  <div class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:border-teal/30 transition-colors" role="region" aria-label="Proyecto Imitator">
                    <p class="text-xs text-slate-500">Proyecto</p>
                    <p class="font-semibold">Imitator (SLT)</p>
                    <p class="text-xs text-slate-500">ST-GCN + Transformer · Offline</p>
                  </div>
                  <div class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:border-teal/30 transition-colors" role="region" aria-label="Análisis Housing Prices">
                    <p class="text-xs text-slate-500">EDA</p>
                    <p class="font-semibold">Danish Housing Prices</p>
                    <p class="text-xs text-slate-500">H2O + SHAP/LIME · 1.5M rows</p>
                  </div>
                  <div class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:border-teal/30 transition-colors" role="region" aria-label="Proyecto ArbitrIA">
                    <p class="text-xs text-slate-500">RAG</p>
                    <p class="font-semibold">ArbitrIA</p>
                    <p class="text-xs text-slate-500">Legal-tech · LlamaIndex</p>
                  </div>
                  <div class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:border-teal/30 transition-colors" role="region" aria-label="Automatización QA">
                    <p class="text-xs text-slate-500">QA</p>
                    <p class="font-semibold">Cypress + Jenkins</p>
                    <p class="text-xs text-slate-500">Mapping & auto-tests</p>
                  </div>
                </div>
              </div>
            </div>
            <p class="mt-2 text-xs text-slate-500" aria-label="Nota: capturas de pantalla reales de proyectos"></p>
          </div>
        </ScrollReveal>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-16 md:py-24 bg-slate-50 dark:bg-slate-900/30" role="region" aria-labelledby="projects-heading">
      <div class="max-w-6xl mx-auto px-4">
        <ScrollReveal>
          <div class="flex items-end justify-between gap-4">
            <h2 id="projects-heading" class="text-2xl md:text-3xl font-bold">Proyectos seleccionados</h2>
            <a href="https://github.com/R0SEWT?tab=repositories" target="_blank" rel="noopener" class="text-sm hover:text-teal transition-colors group">
              Ver todo 
              <span class="inline-block transition-transform group-hover:translate-x-1">→</span>
            </a>
          </div>
        </ScrollReveal>
        <div class="mt-8 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {projects.map(({ id, data }, index) => (
            <ScrollReveal delay={index * 100}>
              <ProjectCard
                href={data.url}
                title={data.title}
                desc={data.description}
                tags={data.tags}
                key={id}
              />
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Experience -->
    <section id="experience" class="py-16 md:py-24">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-2xl md:text-3xl font-bold">Experiencia</h2>
        <div class="mt-8 grid md:grid-cols-2 gap-6">
          <article class="rounded-2xl border border-slate-200 dark:border-slate-800 p-6">
            <header class="flex items-center justify-between">
              <h3 class="font-semibold">QA Trainee — Visma LATAM (Mandü)</h3>
              <span class="text-xs text-slate-500">2024–2025</span>
            </header>
            <ul class="mt-3 text-sm list-disc pl-5 space-y-2 text-slate-600 dark:text-slate-300">
              <li>Automatización de pruebas con Cypress; generación de suites a partir del DOM.</li>
              <li>Gestión de datos/selectores vía fixtures JSON; reporte de bugs en Jira.</li>
              <li>Integración con Jenkins; métricas y coverage en flujos críticos.</li>
            </ul>
          </article>
          <article class="rounded-2xl border border-slate-200 dark:border-slate-800 p-6">
            <header class="flex items-center justify-between">
              <h3 class="font-semibold">Proyectos Académicos — UPC</h3>
              <span class="text-xs text-slate-500">2023–2025</span>
            </header>
            <ul class="mt-3 text-sm list-disc pl-5 space-y-2 text-slate-600 dark:text-slate-300">
              <li>Reconocimiento de emociones con NAO: CNNs + keypoints faciales/posturales.</li>
              <li>RAG legal (ArbitrIA): ingestion service + LlamaIndex + chat contextual.</li>
              <li>Big Data (H2O): modelo de precios de vivienda en Dinamarca con SHAP/LIME.</li>
            </ul>
          </article>
        </div>
      </div>
    </section>

    <!-- Publications -->
    <section id="publications" class="py-16 md:py-24 bg-slate-50 dark:bg-slate-900/30">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-2xl md:text-3xl font-bold">Publicaciones & Docs</h2>
        <ul class="mt-6 grid md:grid-cols-2 gap-4 text-sm">
          <li class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:bg-white/60 dark:hover:bg-slate-900/60 transition">
            <a href="#" class="font-semibold hover:text-teal">Imitator: Gloss‑Free SLT via Embedding Alignment</a>
            <p class="text-slate-500">Borrador IEEE — 2025</p>
          </li>
          <li class="rounded-xl border border-slate-200 dark:border-slate-800 p-4 hover:bg-white/60 dark:hover:bg-slate-900/60 transition">
            <a href="#" class="font-semibold hover:text-teal">Danish Housing Prices — EDA + ML</a>
            <p class="text-slate-500">Reporte técnico — 2025</p>
          </li>
        </ul>
      </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="py-16 md:py-24">
      <div class="max-w-6xl mx-auto px-4">
        <ScrollReveal>
          <div class="text-center mb-12">
            <h2 class="text-2xl md:text-3xl font-bold">¡Hablemos!</h2>
            <p class="mt-3 text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
              ¿Interesado en colaborar? ¿Tienes una oportunidad en Data/ML? Me encantaría conocer tu proyecto.
            </p>
          </div>
        </ScrollReveal>
        
        <div class="grid lg:grid-cols-3 gap-6">
          <ScrollReveal delay={100}>
            <ContactCards />
          </ScrollReveal>

          <ScrollReveal delay={200}>
            <ContactForm />
          </ScrollReveal>

          <ScrollReveal delay={300}>
            <WhatImLookingFor />
          </ScrollReveal>
        </div>
        
        <ScrollReveal delay={400}>
          <div class="mt-12 text-center">
            <p class="text-sm text-slate-600 dark:text-slate-300 mb-4">¿Prefieres el contacto directo?</p>
            <div class="flex flex-wrap justify-center gap-4">
              <Badge text="📧 Respuesta < 48h" variant="primary" />
              <Badge text="💼 Abierto a colaboraciones" variant="secondary" />
              <Badge text="🚀 Disponible para proyectos" animated />
            </div>
          </div>
        </ScrollReveal>
      </div>
    </section>
  </main>

  <footer class="py-8 border-t border-slate-200 dark:border-slate-800 text-center text-sm text-slate-500">
    © {new Date().getFullYear()} Rody Vilchez — Lima, Perú
  </footer>
</BaseLayout>
