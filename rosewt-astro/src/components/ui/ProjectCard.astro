---
const { title, desc, tags = [], href = '#', index = 0 } = Astro.props;
---
<article class="project-card effect-card rounded-2xl p-5 glass" style={`--card-index: ${index};`}>
  <h3 class="font-semibold text-slate-900 dark:text-slate-100">{title}</h3>
  <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">{desc}</p>
  <div class="mt-3 flex flex-wrap gap-2 text-xs text-slate-500">
    {tags.map((t: string) => 
      <span class="rounded-full border border-slate-200 dark:border-slate-800 px-2 py-0.5">
        {t}
      </span>
    )}
  </div>
  <a href={href} target="_blank" rel="noopener" class="mt-4 inline-flex items-center gap-1 text-sm font-medium text-teal focus-ring nav-link">
    Ver m√°s
    <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
    </svg>
  </a>
</article>
