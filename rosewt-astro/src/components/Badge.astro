---
const { text, variant = 'default', animated = false } = Astro.props;

const variants = {
  default: 'border-slate-200 dark:border-slate-800',
  primary: 'border-teal bg-teal/10 text-teal',
  secondary: 'border-lilac bg-lilac/10 text-lilac'
};

const baseClasses = 'rounded-full px-3 py-1 text-xs font-medium transition-all duration-300';
const variantClasses = variants[variant] || variants.default;
const animatedClasses = animated ? 'hover:scale-105 hover:shadow-sm cursor-pointer' : '';
---

<span class={`${baseClasses} ${variantClasses} ${animatedClasses}`}>
  {text}
</span>
